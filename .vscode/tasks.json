{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "cmake", 
			"args": [
				"--build",
				"${workspaceFolder}/build"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"generate"
			]
		},
		{
			"label": "generate",
			"type": "shell",
			"command": "cmake", 
			"args": [
				"-S",
				".", 
				"-B",
				"build"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
	]
}
